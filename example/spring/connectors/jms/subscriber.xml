<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
    This adaptor does the following...
    
      * polls a jms queue
      * writes data to stdout
    
    It is designed to illustrate the basic structure of an adaptor that subscribes to jms

    Run it like this...
    
      java org.openadaptor.spring.SpringApplication -config subscriber.xml -bean Adaptor
    
    You need the following in your classpath
  
      lib
      lib/openadaptor.jar
      lib/openadaptor-spring.jar
      lib/openadaptor-depends.jar
      jbossall-client.jar (this is not distributed with openadaptor)
    
    This example relies on a default instance of jboss running (http://www.jboss.org) on the
    same machine that the example is being run.
     
    To verify that this is working you need put some data on the queue, the corresponding
    publisher example should do this.
-->

<beans>
  
  <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
    <property name="pipeline">
      <list>
        <ref bean="Reader"/>
        <ref bean="Writer"/>
      </list>
    </property>
  </bean>

  <!-- This defines rv connection -->
  <bean id="TibrvConnection" class="org.openadaptor.thirdparty.tibco.TibrvConnection">
    <property name="service" value=""/>  
    <property name="network" value=""/>  
    <property name="daemon" value=""/>  
  </bean>
  
  <!-- This defines jndi connection, from which we get jms connection -->
  <bean id="JndiConnection" class="org.openadaptor.auxil.connector.jndi.JNDIConnection">
    <property name="initialContextFactory" value="org.jnp.interfaces.NamingContextFactory"/>
    <property name="providerUrl" value="jnp://localhost:1099"/>
  </bean>
  
  <!-- jms connection for queue we wish to subscribe to -->
  <bean id="JmsConnection" class="org.openadaptor.auxil.connector.jms.JMSConnection">
    <property name="jndiConnection" ref="JndiConnection"/>
    <property name="connectionFactoryName" value="ConnectionFactory"/>
    <property name="destinationName" value="queue/testQueue"/>
    <property name="durable" value="true"/>
  </bean>

  <!-- Reader that polls a jms queue -->
  <bean id="Reader" class="org.openadaptor.auxil.connector.jms.JMSReadConnector">
    <property name="jmsConnection" ref="JmsConnection"/>
  </bean>
  
  <bean id="Writer" class="org.openadaptor.auxil.connector.iostream.writer.StreamWriteConnector">
    <property name="streamWriter">
      <bean class="org.openadaptor.auxil.connector.iostream.writer.FileWriter"/>
    </property>
  </bean>
  
</beans>