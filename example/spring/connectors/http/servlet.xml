<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
    This adaptor does the following...
    
      * exposes a servlet that clients can send data to
      * writes data to stdout
    
    It is designed to illustrate the basic structure of exposing an adaptor as a
    servlet, typically you want to do this to allow a non java application
    use openadaptor functionality.

    Run it like this...
    
      java org.openadaptor.spring.SpringApplication -config servlet.xml -bean Adaptor
    
    You need the following in your classpath
  
      lib
      lib/openadaptor.jar
      lib/openadaptor-spring.jar
      lib/openadaptor-depends.jar
     
    Once it is running you can test it using a web browser, like this...
  
      http://localhost:9999/?data=foobar
  
-->

<beans>
 <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
   <property name="messageProcessor"><ref bean="Pipeline"/></property>
  </bean>
  
  <bean id="Pipeline" class="org.openadaptor.core.router.Pipeline">
    <description>
      This creates the simple pipeline Servlet-Writer
    </description>
    <property name="processors">
      <list>
        <ref bean="Servlet"/>
        <ref bean="Writer"/>
      </list>
    </property>
  </bean>
   
  <!-- This is a read connector, that exposes a servlet -->
  <bean id="Servlet" class="org.openadaptor.auxil.connector.http.ReadConnectorServlet">
    <property name="port" value="9999"/>
    <property name="acceptGet" value="true"/>
    <property name="parameterNames">
      <list>
        <value>data</value>
      </list>
    </property>
   </bean>
  
  <bean id="Writer" class="org.openadaptor.auxil.connector.iostream.writer.StreamWriteConnector">
    <property name="streamWriter">
      <bean class="org.openadaptor.auxil.connector.iostream.writer.FileWriter"/>
    </property>
  </bean>
  
</beans>