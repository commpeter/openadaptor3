<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  <description><![CDATA[
  This adaptor does the following...
    
    * polls data from a file at a configured interval
    * writes data to stdout
    
  It is designed to illustrate the basic structure of an adaptor that polls a file.

  Run it like this...
    
    java org.openadaptor.spring.SpringAdaptor -config poller.xml -bean Adaptor
    
  You need the following in your classpath
  
    lib
    lib/openadaptor.jar
    lib/openadaptor-spring.jar
    lib/openadaptor-depends.jar
    lib/3rdparty/hsqldb.jar 
    
  This example relies on a hypersonic database running (http://www.hsqldb.org) to run
  up the server make sure hsqldb.jar is in your class path and run the following...
  
    java org.hsqldb.Server -database.0 hsql -dbname.0 xdb
  ]]></description>

    <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
        <property name="messageProcessor">
            <bean class="org.openadaptor.core.router.Pipeline">
                <property name="processors">
                    <list>
                        <ref bean="Poller"/>
                        <ref bean="Writer"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="Poller" class="org.openadaptor.core.connector.PollingReadConnector">
        <description>
          Poller which wraps File Reader and polls infinitely every 30 seconds.
          (More example config parameters commented out in config XML file.)
        </description>              
        <property name="delegate" ref="Reader"/>
        <!--<property name="cronExpression" value="0,5,10,15,20,25,30,35,40,45,50,55 * * * * ?"/>-->
        <!--<property name="forceInitialPoll" value="true"/>-->
        <property name="pollLimit" value="0"/>
        <!--<property name="pollIntervalHours"  value="1"/>-->
        <!--<property name="pollIntervalMins"   value="1"/>-->
        <!--<property name="pollIntervalSecs"   value="30"/>-->
        <property name="pollIntervalMs"     value="30000"/>
    </bean>


    <bean id="Reader" class="org.openadaptor.auxil.connector.iostream.reader.FileReadConnector">
        <property name="filename" value="input/input.txt"/>
        <property name="dataReader">
            <bean class="org.openadaptor.auxil.connector.iostream.reader.string.LineReader">
                <property name="excludeRegex" value="^#.*"/>
            </bean>
        </property>
    </bean>


    <bean id="Writer" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector"/>

</beans>
