<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
  $Header: $
  $Revision: $
 -->
<beans>
  <description>
    Demonstrates an adaptor which reads from IBM MQ directly and writes to stdout. The data read
    off the queue is passed directly to the Outpoint.

    Data originates: IBM MQ Series.
    Data terminates: stdout unless a file is specified.

    Run using
      java org.oa3.spring.SpringApplication -config mq_reader.xml -bean Adaptor -props mq.properties

    mq.properties is a properties format file which should be edited to supply specific mq property
    values e.g. channel etc. Alternatively just edit MQSeries_Outpoint below directly.
  </description>

  <bean id="Adaptor" class="org.oa3.core.adaptor.Adaptor">
    <property name="pipeline">
      <list>
        <ref bean="MQSeries_Inpoint"/>
        <ref bean="Outpoint"/>
      </list>
    </property>
  </bean>

  <bean id="MQSeries_Inpoint" class="org.oa3.thirdparty.mq.MqReadConnector">
    <description>
      Define the MQ Connector used by the Inpoint.
    </description>
    <property name="pollingConfiguration">
      <bean class="org.oa3.core.connector.PollingConfiguration">
        <property name="pollInterval" value="5000"/>
        <property name="maxPollLimit" value="3"/>
      </bean>
    </property>
    <property name="connection">
      <bean class="org.oa3.thirdparty.mq.MqConnection">
        <property name="channelName" value="${mq.channel}"/>
        <property name="hostName" value="${mq.host}"/>
        <property name="managerName" value="${mq.manager}"/>
        <property name="port" value="${mq.port}"/>
        <property name="queueName" value="${mq.queue}"/>
        <property name="userName" value="${mq.user}"/>
        <property name="password" value="${mq.password}"/>
        <!--
          Set one or other (not both) of the following to true
          in order to enable the appropriate transaction mode.
          -->
        <property name="useLocalTransactions" value="false"/>
        <property name="useXATransactions" value="false"/>
      </bean>
    </property>
  </bean>

  <bean id="Outpoint" class="org.oa3.auxil.connector.iostream.writer.StreamWriteConnector">
    <property name="streamWriter">
      <bean class="org.oa3.auxil.connector.iostream.writer.FileWriter"/>
    </property>
  </bean>

</beans>