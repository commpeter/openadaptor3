<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
  $Header:  $
  $Revision:  $
 -->
<beans>
  <description>
    Demonstrates an adaptor which reads from stdin and publishes to IBM MQ directly.

    Data originates: stdin.
    Data terminates: MQ.

    Run using
      java org.oa3.spring.SpringApplication -config mq_writer.xml -bean Adaptor -props mq.properties

    mq.properties is a properties format file which should be edited to supply specific mq property
    values e.g. channel etc. Alternatively just edit MQSeries_Outpoint below directly.
  </description>

  <bean id="Adaptor" class="org.oa3.core.adaptor.Adaptor">
    <property name="messageProcessor" ref="Router"/>
  </bean>

  <bean id="Router" class="org.oa3.core.router.Router">
    <property name="routingMap" ref="RoutingMap"/>
  </bean>

  <bean id="RoutingMap" class="org.oa3.core.router.RoutingMap">
    <property name="processMap">
      <map>
        <entry key-ref="Inpoint" value-ref="MQSeries_Outpoint"/>
      </map>
    </property>
  </bean>

  <bean id="Inpoint" class="org.oa3.auxil.connector.iostream.reader.StreamReadConnector">
    <description>
      Configured to read from stdin.
    </description>
    <property name="streamReader">
      <bean class="org.oa3.auxil.connector.iostream.reader.FileReader"/>
    </property>
    <property name="recordReader">
      <bean class="org.oa3.auxil.connector.iostream.reader.StringRecordReader"/>
    </property>
  </bean>

  <!-- Outpoint: MqWriteConnector -->
  <bean id="MQSeries_Outpoint" class="org.oa3.thirdparty.mq.MqWriteConnector">
    <description>
      Configured to write directly to MQ Series.
    </description>
    <property name="connection">
      <bean class="org.oa3.thirdparty.mq.MqConnection">
        <property name="channelName" value="${mq.channel}"/>
        <property name="hostName" value="${mq.host}"/>
        <property name="managerName" value="${mq.manager}"/>
        <property name="port" value="${mq.port}"/>
        <property name="queueName" value="${mq.queue}"/>
        <property name="userName" value="${mq.user}"/>
        <property name="password" value="${mq.password}"/>
        <property name="mqCharacterSet" value="37"/>
      </bean>
    </property>
  </bean>

</beans>