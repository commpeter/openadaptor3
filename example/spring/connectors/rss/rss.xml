<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
  
  $Id: rss.xml,v 1.7 2006/06/02 07:07:41 higginse Exp $

 Simple example to illustrate use of RSS connectors and Files
 Data originates: RSS
 Data processed : XSLT
 Data terminates: File

 Note: If you wish to run it through a proxy, then the adaptor will need to be run with
 appropriate System properties for the proxy configuration, e.g.

 -D http.proxyHost=<proxy-host> -D http.proxyPort=<proxy-port>

 Run using
  java org.openadaptor.spring.SpringApplication -config rss.xml -bean Adaptor
 -->
<beans>
  <description>
    Simple example to illustrate use of RSS connectors and Files
    Data originates: RSS
    Data processed : XSLT
    Data terminates: File as HTML

    Note: If you wish to run it through a proxy, then the adaptor will need to be run with
    appropriate System properties for the proxy configuration, e.g
    -D http.proxyHost= {proxy-host} -D http.proxyPort={proxy-port}

    Run using
      java org.openadaptor.spring.SpringApplication -config rss.xml -bean Adaptor
  </description>

 <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
   <property name="messageProcessor"><ref bean="Pipeline"/></property>
  </bean>
  
  <bean id="Pipeline" class="org.openadaptor.core.router.Pipeline">
    <description>
      This creates the simple pipeline RSS_Reader-Xslt_Processor-File_Writer
    </description>
    <property name="processors">
      <list>
        <ref bean="RSS_Reader"/>
        <ref bean="Xslt_Processor"/>
        <ref bean="File_Writer"/>
      </list>
    </property>
  </bean>

  <bean id="RSS_Reader" class="org.openadaptor.thirdparty.rss.RSSReadConnector">
    <description>
      This is the RSS Reader. Example polls twice with a five minute interval.
    </description>
    <!--
       This configures polling for this connector.
    -->
    <property name="pollingConfiguration">
      <bean class="org.openadaptor.core.connector.PollingConfiguration">
        <!-- Poll every 5 minutes -->
        <property name="pollInterval" value="300000"/>
        <!-- Poll twice. Note negative numbers mean poll forever. -->
        <property name="maxPollLimit" value="2"/>
      </bean>
    </property>

    <!-- Add the feeds here -->
    <property name="urlStrings">
      <list>
        <value>http://www.theregister.co.uk/headlines.rss</value>
        <value>http://slashdot.org/slashdot.rss</value>
        <!--
        <value>http://rss.cnn.com/rss/cnn_topstories.rss</value>
        <value>http://news.bbc.co.uk/rss/newsonline_world_edition/front_page/rss091.xml</value>
        <value>http://rss.news.yahoo.com/rss/topstories</value>
        -->
      </list>
    </property>
    <!-- Interested in stuff happened early this morning onwards -->
    <property name="pollStartTime" value="05:00"/>
  </bean>

  <!--
      process the XML string using the XLST defined in the xsl directory
  -->
  <bean id="Xslt_Processor" class="org.openadaptor.auxil.processor.xml.XsltProcessor">
    <!-- Substitute with your favourite XSLT -->
    <!-- <property name="xsltFile" value="xsl/rss10.xsl"/>-->
    <property name="xsltFile" value="xsl/rss.xsl"/>
  </bean>

  <bean id="File_Writer" class="org.openadaptor.auxil.connector.iostream.writer.StreamWriteConnector">
    <property name="streamWriter">
      <bean class="org.openadaptor.auxil.connector.iostream.writer.FileWriter">
        <property name="path" value="rss_out.html"/>
        <property name="append" value="false"/>
      </bean>
    </property>

  </bean>
</beans>
