<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
 
  <description><![CDATA[ 
  This adaptor does the following...
    
    * reads delimited records from stdin
    * converts delmited input into a map
    * uses an enrichment processor to access more data in db
    * converts map to xml
    * writes to stdout
    
  It is designed to illustrate the basic structure of a file reader/writer adaptor

  Run it like this...
    
    java org.openadaptor.spring.SpringAdaptor -config csv.xml
   
  You need the following in your classpath
  
    lib
    lib/openadaptor.jar
    lib/openadaptor-spring.jar
    lib/openadaptor-depends.jar
    
  Once it is running it will wait for a delimited string input
    
  type something like this...
    
    a, b, c
    
  ...and you should see it echo-ed in XML.
  ]]></description>

  <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
  	<property name="messageProcessor">
  		<bean class="org.openadaptor.core.router.Router">
  			<property name="processors">
  				<list>
  					<ref bean="Reader" />
  					<ref bean="MapConverter" />
  					<ref bean="EnrichmentProcessor" />
  					<ref bean="XmlConverter" />
  					<ref bean="Writer" />
  				</list>
  			</property>
  		</bean>
  	</property>
  </bean>

  <bean id="Reader" class="org.openadaptor.auxil.connector.iostream.reader.FileReadConnector"/>
  
  <bean id="MapConverter" class="org.openadaptor.auxil.convertor.delimited.DelimitedStringToOrderedMapConvertor">
    <property name="delimiter" value=",">
      <description>This means that delimiters within quotes do not delimit.</description>
    </property>
    <property name="protectQuotedFields" value="true"/>
    <property name="stripEnclosingQuotes" value="true"/>
  </bean>
  
  <bean id="JdbcConnection" class="org.openadaptor.auxil.connector.jdbc.JDBCConnection">
    <description>This defines jdbc connection.</description>
    <property name="driver" value="org.hsqldb.jdbcDriver"/>
    <property name="url" value="jdbc:hsqldb:hsql://localhost/xdb"/>
    <property name="username" value="sa"/>
    <property name="password" value=""/>
  </bean>

  <bean id="DBReader" class="org.openadaptor.auxil.connector.jdbc.reader.JDBCReadConnector">
    <property name="jdbcConnection" ref="JdbcConnection"/>
    <property name="sql">
      <value>
        SELECT t.Qty as Quantity
        FROM TRADE t
        WHERE t.TradeId = ?
      </value>
    </property>
  </bean>
  
  <bean id="EnrichmentProcessor" class="org.openadaptor.auxil.processor.GenericEnrichmentProcessor">
     <property name="readConnector" ref="DBReader"/>
  </bean>
  
  <bean id="XmlConverter" class="org.openadaptor.auxil.convertor.xml.OrderedMapToXmlConvertor">
    <property name="rootElementTag" value="record"/>
  </bean>
  
  <bean id="Writer" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector"/>
  
</beans>