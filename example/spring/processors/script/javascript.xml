<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
 
  <description><![CDATA[
    This (contrived) adaptor does the following...
    
      * reads lines from stdin
      * prefixes "hello" to the front
      * writes to stdout
    
    It is designed to illustrate the basic structure of an adaptor in spring.

    Run it like this...
    
      java org.openadaptor.spring.SpringAdaptor -config script.xml
    
    You need the following in your classpath
  
      lib
      lib/openadaptor.jar
      lib/openadaptor-spring.jar
      lib/openadaptor-depends.jar
     
    Once it is running it will wait for command line input
    
    type something like this...
    
      mum
    
    ...and you should see it converted to something like this...
  
      hello mum!
    
  ]]></description>

  <!-- This is the bean that actually gets run -->
  <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
    <property name="messageProcessor">
      <bean class="org.openadaptor.core.router.Pipeline">
        <property name="processors">
          <list>
            <ref bean="Reader"/>
            <ref bean="ScriptProcessor"/>
            <ref bean="Writer"/>
          </list>
        </property>
      </bean>
    </property>  
  </bean>
  
  <bean id="Reader" class="org.openadaptor.auxil.connector.iostream.reader.FileReadConnector"/>
  
  <!-- This is a processor that converts an ordered map into an xml string -->
  <bean id="ScriptProcessor" class="org.openadaptor.auxil.processor.script.ScriptProcessor">
    <property name="language" value="js"/>
    <property name="script">
      <value>
        data = "Hello " + data + "!";
      </value>
    </property>
  </bean>
  
  <!-- This is a write connector that outputs the data to a stream (stdout) -->
  <bean id="Writer" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector"/>
  
</beans>