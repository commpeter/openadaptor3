<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="test1" class="org.oa3.router.RoutingMap">
    <property name="processMap">
      <map>
        <entry key-ref="InPoint" value-ref="OutPoint"/>
      </map>
    </property>
    <property name="discardMap">
      <map>
        <entry key-ref="InPoint" value-ref="Discard"/>
        <entry key-ref="OutPoint" value-ref="Discard"/>
      </map>
    </property>
    <property name="exceptionMap">
      <map>
        <entry key="java.lang.Exception" value-ref="Error"/>
      </map>
    </property>
  </bean>
  
  <bean id="test2" class="org.oa3.router.RoutingMap">
    <property name="processMap">
      <map>
        <entry key-ref="InPoint" value-ref="Processor1"/>
        <entry key-ref="Processor1">
          <list>
            <ref bean="Processor2"/>
            <ref bean="Processor3"/>
          </list>
        </entry>
        <entry key-ref="Processor2" value-ref="OutPoint"/>
      </map>
    </property>
    <property name="discardMap">
      <map>
        <entry key-ref="InPoint" value-ref="Discard"/>
        <entry key-ref="OutPoint" value-ref="Discard"/>
        <entry key-ref="Processor1">
          <list>
            <ref bean="Discard"/>
            <ref bean="Error"/>
          </list>
        </entry>
      </map>
    </property>
    <property name="exceptionMap">
      <map>
        <entry key="*">
          <map>
            <entry key="java.lang.Exception" value-ref="Error"/>
          </map>
        </entry>
        <entry key-ref="InPoint">
          <map>
            <entry key="java.lang.NullPointerException">
              <list>
                <ref bean="Discard"/>
                <ref bean="Error"/>
              </list>
            </entry>
            <entry key="java.lang.Exception" value-ref="Error"/>
          </map>
        </entry>
      </map>
    </property>
  </bean>
  
  <bean id="InPoint" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="InPoint"/>
  </bean>
  
  <bean id="OutPoint" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="OutPoint"/>
  </bean>
  
  <bean id="Processor1" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="Processor1"/>
  </bean>
  
  <bean id="Processor2" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="Processor2"/>
  </bean>
  
  <bean id="Processor3" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="Processor3"/>
  </bean>
  
  <bean id="Error" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="Error"/>
  </bean>
  
  <bean id="Discard" class="org.oa3.spring.RoutingMapTestCase$DummyNode">
    <constructor-arg value="Discard"/>
  </bean>
  
</beans>