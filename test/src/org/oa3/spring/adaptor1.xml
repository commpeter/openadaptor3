<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="adaptor" class="org.oa3.core.adaptor.Adaptor">
    <!-- <property name="messageProcessor" ref="router"/> -->
    <property name="routingMap" ref="routingMap"/>
  </bean>
  
  <!--
  <bean id="router" class="org.o3.core.router.Router">
    <property name="routingMap" ref="routingMap"/>
  </bean>
  -->
  
  <bean id="routingMap" class="org.oa3.core.router.RoutingMap">
    <property name="processMap">
      <map>
        <entry key-ref="InPoint" value-ref="OutPoint"/>
      </map>
    </property>
  </bean>
  
  <bean id="InPoint" class="org.oa3.core.adaptor.AdaptorInpoint">
    <property name="connector">
      <bean class="org.oa3.connector.TestReadConnector">
        <property name="dataString" value="foobar"/>
      </bean>
    </property>
  </bean>
  
  <bean id="OutPoint" class="org.oa3.core.adaptor.AdaptorOutpoint">
    <property name="connector">
      <bean class="org.oa3.connector.TestWriteConnector">
        <property name="expectedOutput" value="foobar"/>
      </bean>
    </property>
  </bean>

</beans>