<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
    <property name="pipeline">
      <list>
        <ref bean="InPoint"/>
        <ref bean="Processor"/>
        <ref bean="OutPoint"/>
      </list>
    </property>
  </bean>
  
  <bean id="InPoint" class="org.openadaptor.core.connector.TestReadConnector">
    <property name="id" value="InPoint"/>
  </bean>

  <bean id="Processor" class="org.openadaptor.core.processor.TestProcessor">
    <property name="id" value="Processor"/>
  </bean>

  <bean id="OutPoint" class="org.openadaptor.core.connector.TestWriteConnector">
    <property name="id" value="OutPoint"/>
    <property name="expectedOutput" value="Processor(test data 1)"/>
  </bean>

</beans>