<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
    This adaptor does the following...
    
      * reads data to stdin
      * writes data down a socket
    
    It is designed to illustrate the basic structure of an adaptor that connects
    to a socket and writes data

    Run it like this...
    
      java org.openadaptor.spring.SpringApplication -config writer.xml -bean Adaptor
    
    You need the following in your classpath
  
      lib
      lib/openadaptor.jar
      lib/openadaptor-spring.jar
      lib/openadaptor-depends.jar
    
    If order to run it, needs to connect to the remote socket, run the corresponding
    reader example and input data at the command line
-->

<beans>
  
 <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
   <property name="messageProcessor"><ref bean="Pipeline"/></property>
  </bean>
  
  <bean id="Pipeline" class="org.openadaptor.core.router.Pipeline">
    <description>
      This creates the simple pipeline Reader-Writer
    </description>
    <property name="processors">
      <list>
        <ref bean="Reader"/>
        <ref bean="Writer"/>
      </list>
    </property>
  </bean>

  <bean id="Reader" class="org.openadaptor.auxil.connector.iostream.reader.FileReadConnector"/>
  
  <!-- Writer that connects to remote socket and writes data -->
  <bean id="Writer" class="org.openadaptor.auxil.connector.iostream.writer.SocketWriteConnector">
    <property name="hostname" value="localhost"/>
    <property name="port" value="9990"/>
  </bean>
  
</beans>